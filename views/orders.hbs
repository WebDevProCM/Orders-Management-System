  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Order</h5>
        <button type="button" class="btn-close" aria-label="Close" onclick="hideModal('#updateModal')"></button>
      </div>
      <div class="modal-body">
        <form class="updateForm">
            <div class="mb-3">
                <label for="orderedDate" class="form-label">Ordered Date</label>
                <input type="date" class="form-control" id="orderedDate" name="orderedDate">
            </div>
            <div class="mb-3">
                <label for="deliveryDate" class="form-label">Delivery Date</label>
                <input type="date" class="form-control" id="deliveryDate" name="deliveryDate">
            </div>
            <div class="mb-3">
                <label for="paid" class="form-label">Customer Paid/Not</label>
                <select class="form-select" id="paid" name="paid">
                  <option value="yes">Yes</option>
                  <option value="No" selected>No</option>
                </select>

                {{!-- <input type="radio" class="form-control" id="paid" name="paid" value="No"> --}}
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                  <option value="1" selected>Preparing</option>
                  <option value="2">Dispatched</option>
