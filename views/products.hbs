<div class="orderDetails-nav">
    <button type="button" class="btn btn-outline-primary" id="create-btn" onclick="initiateCreate()">+ADD</button>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>PROD-ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Status</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

    </tbody>

